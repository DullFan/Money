<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myNavigationDrawerStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>
    <style name="MyDatePickerDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <!--对话框加载的时候背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--设置样式颜色 作用是设置圆角的时候消除白色的底-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextInputLayoutLineColor" parent="Theme.AppCompat.Light">
        <!--没有获取焦点时的颜色-->
        <item name="colorAccent">@color/purple_500</item>
        <!--获取焦点时的颜色-->
        <item name="colorControlActivated">@color/purple_500</item>
    </style>

    <style name="TextInputLayoutLineColor2" parent="Theme.AppCompat.Light">
        <!--没有获取焦点时的颜色-->
        <item name="colorAccent">@color/black</item>
        <!--获取焦点时的颜色-->
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>
</resources>